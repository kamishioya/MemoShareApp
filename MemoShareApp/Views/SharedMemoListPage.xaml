<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MemoShareApp.ViewModels"
             xmlns:models="clr-namespace:MemoShareApp.Models"
             x:Class="MemoShareApp.Views.SharedMemoListPage"
             x:DataType="viewmodels:SharedMemoListViewModel"
             Title="{Binding Title}">

    <RefreshView IsRefreshing="{Binding IsBusy}"
                 Command="{Binding RefreshCommand}">
        <CollectionView ItemsSource="{Binding SharedMemos}"
                        SelectionMode="Single"
                        EmptyView="共有されたメモはありません">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Memo">
                    <Frame Margin="10,5" Padding="15" HasShadow="True" CornerRadius="10">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SharedMemoListViewModel}}, Path=SelectMemoCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>

                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding Title}" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   LineBreakMode="TailTruncation"/>
                            
                            <Label Text="{Binding Content}" 
                                   FontSize="14"
                                   TextColor="Gray"
                                   MaxLines="2"
                                   LineBreakMode="TailTruncation"/>
                            
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding AuthorName, StringFormat='作成者: {0}'}"
                                       FontSize="12"
                                       TextColor="Gray"/>
                                <Label Text="{Binding UpdatedAt, StringFormat='{0:yyyy/MM/dd HH:mm}'}"
                                       FontSize="12"
                                       TextColor="LightGray"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
