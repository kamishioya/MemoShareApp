<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MemoShareApp.ViewModels"
             x:Class="MemoShareApp.Views.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            
            <Label Text="メモ共有アプリ" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}"/>

            <Label Text="ログイン" 
                   FontSize="24" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

            <Entry Placeholder="ユーザー名"
                   Text="{Binding Username}"
                   Keyboard="Text"
                   ReturnType="Next"/>

            <Entry Placeholder="パスワード"
                   Text="{Binding Password}"
                   IsPassword="True"
                   ReturnType="Done"/>

            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
                   HorizontalOptions="Center"/>

            <Button Text="ログイン"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="{StaticResource Primary}"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="アカウントをお持ちでないですか？" VerticalOptions="Center"/>
                <Label Text="新規登録" 
                       TextColor="{StaticResource Primary}"
                       TextDecorations="Underline"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToRegisterCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

            <Label Text="テスト用: ユーザー名 'test1' でログイン"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
