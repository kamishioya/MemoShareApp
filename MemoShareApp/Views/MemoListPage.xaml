<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MemoShareApp.ViewModels"
             xmlns:models="clr-namespace:MemoShareApp.Models"
             x:Class="MemoShareApp.Views.MemoListPage"
             x:DataType="viewmodels:MemoListViewModel"
             Title="{Binding Title}"
             Shell.NavBarIsVisible="True">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="追加" Command="{Binding AddMemoCommand}"/>
        <ToolbarItem Text="ログアウト" Command="{Binding LogoutCommand}"/>
    </ContentPage.ToolbarItems>

    <RefreshView IsRefreshing="{Binding IsBusy}"
                 Command="{Binding RefreshCommand}">
        <CollectionView ItemsSource="{Binding Memos}"
                        SelectionMode="Single"
                        EmptyView="メモがありません。右上の追加ボタンから作成してください。">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Memo">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="削除"
                                           BackgroundColor="Red"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MemoListViewModel}}, Path=DeleteMemoCommand}"
                                           CommandParameter="{Binding .}"/>
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Frame Margin="10,5" Padding="15" HasShadow="True" CornerRadius="10">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MemoListViewModel}}, Path=SelectMemoCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>

                            <VerticalStackLayout Spacing="5">
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{Binding Title}" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"/>
                                    <Label Text="共有中" 
                                           FontSize="12"
                                           TextColor="White"
                                           BackgroundColor="{StaticResource Primary}"
                                           Padding="5,2"
                                           IsVisible="{Binding IsShared}"
                                           VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                                
                                <Label Text="{Binding Content}" 
                                       FontSize="14"
                                       TextColor="Gray"
                                       MaxLines="2"
                                       LineBreakMode="TailTruncation"/>
                                
                                <Label Text="{Binding UpdatedAt, StringFormat='{0:yyyy/MM/dd HH:mm}'}"
                                       FontSize="12"
                                       TextColor="LightGray"/>
                            </VerticalStackLayout>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
