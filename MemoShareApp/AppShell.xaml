<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MemoShareApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MemoShareApp.Views"
    Title="メモ共有アプリ"
    Shell.NavBarIsVisible="True"
    Shell.BackgroundColor="{StaticResource Primary}"
    Shell.ForegroundColor="White"
    Shell.TitleColor="White">

    <TabBar>
        <ShellContent
            Title="マイメモ"
            ContentTemplate="{DataTemplate views:MemoListPage}"
            Route="MemoListPage" />

        <ShellContent
            Title="共有メモ"
            ContentTemplate="{DataTemplate views:SharedMemoListPage}"
            Route="SharedMemoListPage" />
    </TabBar>

</Shell>
