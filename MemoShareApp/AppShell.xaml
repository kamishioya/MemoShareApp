<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MemoShareApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MemoShareApp.Views"
    Title="メモ共有アプリ">

    <TabBar>
        <ShellContent
            Title="マイメモ"
            Icon="memo_icon.png"
            ContentTemplate="{DataTemplate views:MemoListPage}"
            Route="MemoListPage" />

        <ShellContent
            Title="共有メモ"
            Icon="shared_icon.png"
            ContentTemplate="{DataTemplate views:SharedMemoListPage}"
            Route="SharedMemoListPage" />
    </TabBar>

</Shell>
